@model WesthoughtonWorldOfWicker.Models.Category

@{
    ViewData["Title"] = "Browse Products";
}

<h3 class="text-center">@Model.CategoryName</h3>
<br />
<ul id="album-list" class="list-unstyled">
    @foreach (var product in Model.Products)
    {
        <li class="col-lg-3 col-md-3 col-sm-2 col-xs-4 container">
            <a asp-controller="Store" asp-action="Details" asp-route-id="@product.ProductId">
                @if (!string.IsNullOrEmpty(product.productImageUrl))
                {
                    <img alt="@product.ModelName" width="200" height="200" src="@Url.Content(@product.productImageUrl)" />
                }
                <h5 class="control-label text-center">@product.ModelName</h5>
            </a>
        </li>
    }
</ul>